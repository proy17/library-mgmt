<div class="container" ng-controller="AddBookCtrl">
    <div class="row" id="register-container">
        <div class="span8 offset2">
            <div class="alert alert-danger" ng-show="error">
                Unable to the add the book. Please try again later.
            </div>
            <form class="form-horizontal" role="form" ng-controller="AddBookCtrl">
                <div class="form-group">
                    <label for="inputName3" class="col-sm-2 control-label">Book name</label>
                    <div class="col-sm-4">
                        <input class="form-control" id="inputName3" placeholder="Name" ng-model="formInfo.BookName">
                        <span ng-show="bookNameRequired">{{bookNameRequired}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName3" class="col-sm-2 control-label">Author</label>
                    <div class="col-sm-4">
                        <input class="form-control" id="inputName4" placeholder="Name" ng-model="formInfo.Author">
                        <span ng-show="authorRequired">{{authorRequired}}</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Language</label>
                    <div class="col-sm-4">
                        <input t class="form-control" id="inputEmail3" placeholder="Name" ng-model="formInfo.Language">
                        <span ng-show="languageRequired">{{languageRequired}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Version</label>
                    <div class="col-sm-4">
                        <input  class="form-control" id="inputPassword4" placeholder="Name" ng-model="formInfo.BookVersion">
                        <span ng-show="versionRequired">{{versionRequired}}</span>
                    </div>
                </div>
                    <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Publisher</label>
                    <div class="col-sm-4">
                        <input class="form-control" id="inputPassword5" placeholder="Name" ng-model="formInfo.Publisher">
                        <span ng-show="publisherRequired">{{publisherRequired}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" ng-click="addbook()">Add Book</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
