<div class="container" ng-controller="RegisterCtrl">
    <div class="row" id="register-container">
        <div class="span8 offset2" style="max-width:300px">
            <div class="alert alert-danger" ng-show="error">
                Unable to register the user. Please try again later.
            </div>
            <div class="alert alert-success" ng-show="registered">
                The user is successfully created. Email would be the user-id to login.
            </div>
            
            <form class="form-horizontal" role="form" ng-controller="RegisterCtrl">
                <div class="form-group">
                    <label for="inputName3" class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-4">
                        <input class="form-control" id="inputName3" placeholder="Name" ng-model="formInfo.FirstName">
                        <span ng-show="nameRequired">{{firstNameRequired}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName3" class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-4">
                        <input class="form-control" id="inputName4" placeholder="Name" ng-model="formInfo.LastName">
                        <span ng-show="nameRequired">{{lastNameRequired}}</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-4">
                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email" ng-model="formInfo.UserEmail">
                        <span ng-show="emailRequired">{{emailRequired}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password" ng-model="formInfo.Password">
                        <span ng-show="passwordRequired">{{passwordRequired}}</span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" ng-click="register()">Sign up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
